{
  "name": "10_auth",
  "version": "1.1.3",
  "description": "A simple dynamic website template to be used as the base for various projects",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "type": "module",
  "ava": {
    "verbose": true,
    "require": [
      "esm"
    ]
  },
  "scripts": {
    "start": "node index.js",
    "jsdoc": "node_modules/.bin/jsdoc -c jsdoc.conf",
    "linter": "node_modules/.bin/eslint .",
    "linterf": "node_modules/.bin/eslint . --fix",
    "prettier": "node_modules/.bin/prettier --check .",
    "format": "node_modules/.bin/prettier --write .",
    "test": "ava"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "echo \"[Husky] Running linter fix: \"",
      "npm run linterf",
      "echo \"[Husky] Running linter check: \"",
      "npm run linter",
      "echo \"[Husky] Running tests: \"",
      "npm test ./unitTests/*",
      "echo \"[Husky] Running git add: \"",
      "git add -A ."
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "bcrypt-promise": "^2.0.0",
    "bootstrap": "^4.5.3",
    "handlebars": "^4.7.6",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-router": "^9.4.0",
    "koa-session": "^6.0.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.3.0",
    "save-dev": "0.0.1-security",
    "sqlite-async": "^1.1.0"
  },
  "devDependencies": {
    "ava": "^3.13.0",
    "eslint": "^7.12.1",
    "esm": "^3.2.25",
    "husky": "^4.3.0",
    "jsdoc": "^3.6.5",
    "jsdoc-route-plugin": "^0.1.0",
    "lint-staged": "^10.5.1",
    "prettier": "2.1.2"
  }
}
