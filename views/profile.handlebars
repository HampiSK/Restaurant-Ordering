<!doctype html>

<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Create an Account</title>
        <meta name="description" content="Registration form to create users">
        <meta name="author" content="Adam Hampachel">
        <link href="{{host}}/styles/style.css" type="text/css" rel="stylesheet"/>
        <link href="{{host}}/styles/style-profile.css" type="text/css" rel="stylesheet"/>
        <link rel="stylesheet" type="text/css" href="{{host}}/bootstrap/dist/css/bootstrap.min.css">           
        <script type="text/javascript" src="{{host}}/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="{{host}}/bootstrap/dist/js/bootstrap.min.js"></script>  
        <script type="module" src="{{host}}/main.js"></script>      
    </head>   
    <body>
        <header> 
            <ul class="nav justify-content">
                <li class="nav-item nav-main">
                    <a class="nav-link nav-a" href="/secure/profile">{{username}}</a>
                </li>
                <li class="nav-item nav-menu">
                    <a class="nav-link nav-a" href="/secure/orders">Orders</a>
                </li>
                <li class="nav-item nav-menu">
                    <a class="nav-link nav-a" href="/secure/tables">Tables</a>
                </li>
                <li class="nav-item nav-menu">
                    <a class="nav-link nav-a" href="/secure/menu">Menu</a>
                </li>
                <li class="nav-item nav-menu">
                    <a class="nav-link nav-a" href="/logout">Logout</a>
                </li>
            </ul>
        </header>  
        <main class="container emp-profile"> 
            <form action="/profile" enctype="multipart/form-data" method="post">
                <section class="row">
                    <section class="col-md-4">
                        <article class="profile-img">
                            <img src="{{host}}/images/users/{{Photo}}" alt="Profile Picture"/>    
                        </article>
                    </section>
                    <section class="col-md-6">
                        <article class="profile-head">
                            <h5>USERNAME: {{username}}</h5>
                            <p class="proile-rating">ID: {{userid}}</p>
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">  
                                    <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General Information</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Contact Details</a>
                                </li>
                            </ul>
                        </article>
                    </section>
                </section>
                <section class="row">
                    <section class="col-md-4">
                        <article class="profile-body">
                            <p>ACTIVITY</p>
                            <a>Something</a><br/>
                            <a>Something</a>
                            <p>SETTINGS</p>  
                            <article class="profile-body">
                                    <input type="submit" class="profile-btn" value="Edit Profile"/>
                            </article> 
                            <article class="profile-body">
                                    <input type="submit" class="profile-btn" value="Change Password"/>
                            </article>  
                        </article>             
                    </section>
                    <article class="col-md-8">
                        <article class="tab-content profile-tab" id="myTabContent">
                            <section class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                                <article class="row">
                                    <article class="col-md-6">
                                        <label>First Name</label>
                                    </article>
                                    <article class="col-md-6">
                                        <p>{{FirstName}}</p>
                                    </article>
                                </article>
                                <article class="row">
                                    <article class="col-md-6">
                                        <label>Last Name</label>
                                    </article>
                                    <article class="col-md-6">
                                        <p>{{LastName}}</p>
                                    </article>
                                </article>
                                <article class="row">
                                    <article class="col-md-6">
                                        <label>Gender</label>
                                    </article>
                                    <article class="col-md-6">
                                        <p>{{Gender}}</p>
                                    </article>
                                </article>
                                <article class="row">
                                    <article class="col-md-6">
                                        <label>Date Of Birth</label>
                                    </article>
                                    <article class="col-md-6">
                                        <p>{{Birth}}</p>
                                    </article>
                                </article>                                       
                                <article class="row">
                                    <article class="col-md-6">
                                        <label>Position</label>
                                    </article>
                                    <article class="col-md-6">
                                        <p>{{position}}</p>
                                    </article>
                                </article>
                            </section>
                            <section class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                                <article class="row">
                                    <article class="col-md-6">
                                        <label>Email</label>
                                    </article>
                                    <article class="col-md-6">
                                        <p>{{Email}}</p>
                                    </article>
                                </article>
                                <article class="row">
                                    <article class="col-md-6">
                                        <label>Phone</label>
                                    </article>
                                    <article class="col-md-6">
                                        <p>{{Phone}}</p>
                                    </article>
                                </article>
                                <article class="row">
                                    <article class="col-md-6">
                                        <label>Street</label>
                                    </article>
                                    <article class="col-md-6">
                                        <p>{{Street}}</p>
                                    </article>
                                </article>
                                <article class="row">
                                    <article class="col-md-6">
                                        <label>City</label>
                                    </article>
                                    <article class="col-md-6">
                                        <p>{{City}}</p>
                                    </article>
                                </article>   
                                <article class="row">
                                    <article class="col-md-6">
                                        <label>Zip</label>
                                    </article>
                                    <article class="col-md-6">
                                        <p>{{Zip}}</p>
                                    </article>
                                </article>                                  
                            </section>
                        </article>
                    </article>
                </section> 
            </form>
        </main>
    </body>
</html>