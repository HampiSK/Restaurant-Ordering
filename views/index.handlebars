<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Log In</title>
        <meta name="description" content="Form to log in">
        <meta name="author" content="Adam Hampachel">
        <link href="{{host}}/styles/style-login.css" type="text/css" rel="stylesheet" />
        <link rel="stylesheet" type="text/css" href="{{host}}/bootstrap/dist/css/bootstrap.min.css">           
        <script type="text/javascript" src="{{host}}jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="{{host}}/bootstrap/dist/js/bootstrap.min.js"></script>  
        <script type="module" src="{{host}}/main.js"></script>      
    </head>   
    <body class="login-body">
        <section id="login">
            <article class="container">
                <article id="login-row" class="row justify-content-center align-items-center">
                    <article id="login-column" class="col-md-6">
                        <article id="login-box" class="col-md-12">
                            <h3 class="text-center text-info">Welcome!</h3>
                            {{#if authorised}}
                            <article class="form-group">
                                <a href="{{host}}/secure/tables" class="btn btn-primary btn-lg btn-block" role="button" aria-pressed="true">Continue</a>
                            </article>
                            <article class="form-group">
                                <a href="{{host}}/logout" class="btn btn-primary btn-lg btn-block" role="button" aria-pressed="true">Logout</a>
                            </article>
                            {{else}}
                            <article class="form-group">
                                <a href="{{host}}/login" class="btn btn-primary btn-lg btn-block" role="button" aria-pressed="true">Login</a>
                            </article>
                            {{/if}}
                        </article>
                    </article>
                </article>
            </article>
        </section>
    </body>
</html> 